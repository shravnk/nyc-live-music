<h2><%= @user.name %></h2>


<h4>About this venue:</h4>
<p><%= @user.bio %></p><br>

<h4>Venue Location:</h4>
<p><%= @user.address %></p><br>
<% gpath = "https://www.google.com/maps/embed/v1/place?key=AIzaSyDP_29l2W2nKlsxKraRNzJ90CeQLXRUSws&q=" + @user.address.gsub!(/\s/, '+') %>

<iframe src="<%= gpath %>" width="300" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
<h3>Upcoming Shows</h3>

<div class="row">
  <div class="col-sm-8"><h4>Show</h4></div>
  <div class="col-sm-4"><h4>Date</h4></div>
	<% future_shows.each do |show| %>
		<% if show.venue_id == @user.id %>
		<div class="col-sm-8"><a href="/shows/<%= show.id %>"><%= show.name %></a></div>
		
		<% if show.start_time %>
			<div class="col-sm-4"><%= show.start_time.strftime("%B %d") %></div>
		<% else %>
			<div class="col-sm-4">TBA</div>
		<% end %>
		<% end %>
	<% end %>
</div>

<br><br>

<h3>Past Shows</h3>

<div class="row">
  <div class="col-sm-8"><h4>Show</h4></div>
  <div class="col-sm-4"><h4>Date</h4></div>
	<% past_shows.each do |show| %>
		<% if show.venue_id == @user.id %>
		<div class="col-sm-8"><a href="/shows/<%= show.id %>"><%= show.name %></a></div>
		
		<% if show.start_time %>
			<div class="col-sm-4"><%= show.start_time.strftime("%B %d, %Y") %></div>
		<% else %>
			<div class="col-sm-4">TBA</div>
		<% end %>
		<% end %>
	<% end %>
</div>
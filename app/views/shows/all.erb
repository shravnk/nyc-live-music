<% future_shows =  Show.all.select{|show| show.start_time > Time.now}.sort_by!{|s| s.start_time}%>



<% future_shows.each do |show| %>
<a href="/shows/<%= show.id %>"><%= show.name %></a>
 
<% if show.start_time %>
	<p><%= show.start_time.strftime("%B %d, %Y") %></p>
<% else %>
	<p>TBA</p>
<% end %>
<% end %>


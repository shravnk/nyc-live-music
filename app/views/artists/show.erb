<h2><%= @user.name %></h2>

<p><%= @user.bio %></p>


<h3>Upcoming Shows</h3>



<% future_shows.each do |show| %>
<% if show.artist_id == @user.id %>
<a href="/shows/<%= show.id %>"><%= show.name %></a>
<p><%= show.venue.name %></p> 
<p><%= show.start_time.strftime("%B %d") %></p>
<br>
<% end %>
<% end %>



<h3>Past Shows</h3>

<% past_shows.each do |show| %>

<% if show.artist_id == @user.id %>
<a href="/shows/<%= show.id %>"><%= show.name %></a>
<p><%= show.venue.name %></p> 
<p><%= show.start_time.strftime("%B %d, %Y") %></p>
<% end %>
<% end %>